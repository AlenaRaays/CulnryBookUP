@{
    @model IEnumerable<CulnryBookUP.Models.LoginModel>
}
<link rel="stylesheet" href="~/css/form.css"/>
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css"/>

<body>
    <div class="login-container">
        <div class="login-card">
            <div class="brand-organic">
                <p>японская кулинарная книга</p>
            </div>

            <form method="post" action="/Account/Index">
                <div class="input-group">
                    <label class="input-label" for="login">логин</label>
                    <input type="text" id="login" name="login" class="input-field" placeholder="Введите логин" required>
                </div>

                <div class="input-group">
                    <label class="input-label" for="password">пароль</label>
                    <input type="password" id="password" name="password" class="input-field" placeholder="***********" required>
                </div>

                <div class="flex-row">
                    <label class="checkbox-wrapper">
                        <input type="checkbox" checked> <span style="margin-left: 0.2rem;">запомнить</span>
                    </label>
                    <a href="#" class="forgot-link">забыли пароль?</a>
                </div>

                <button type="submit" class="login-button">войти</button>
            </form>

            <div class="separator">
                <span class="separator-line"></span>
                <span>или</span>
                <span class="separator-line"></span>
            </div>

            <div class="signup-prompt">
                ещё нет аккаунта?
                <a href="~/Register/Index" class="signup-link">создать </a>
            </div>
        </div>
    </div>
</body>