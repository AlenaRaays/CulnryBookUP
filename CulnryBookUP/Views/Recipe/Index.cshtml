@model IEnumerable<CulnryBookUP.Models.Recipe>


<link rel="stylesheet" href="~/css/recipe.css" />
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />

<body>
    <div class="recipes-container">
        <div class="recipes-card">

            <div class="brand-organic">
                <p>книга рецептов</p>
                @if (ViewBag.loginedID == 2)
                {
                    <div class="action-buttons">
                        <button class="add-button" onclick="location.href='@Url.Action("AddRecipe","Recipe")'">добавить рецепт</button>
                    </div>
                }
            </div>


            <div class="filter-sort-panel">
                <div class="search-wrapper">
                    <form method="get" action="@Url.Action("Index", "Recipe")" class="search-form">
                        <div class="search-container">
                            <input type="text"
                                   name="searchQuery"
                                   class="search-input"
                                   placeholder="поиск рецептов..."
                                   value="@Context.Request.Query["searchQuery"]"
                                   aria-label="Поиск рецептов">
                            <button type="submit" class="search-button">
                                <span class="search-icon">🔍</span>
                            </button>
                        </div>
                    </form>
                </div>

                

                <div class="filter-group">
                    <form method="get" action="@Url.Action("Index", "Recipe")" class="filter-sort-panel">
                        <div class="filter-group">
                            <div>
                                <label for="category-filter" class="filter-label">категория</label>
                                <div class="custom-select-wrapper">
                                    <select id="category-filter" name="categoryId" class="organic-select" onchange="this.form.submit()">
                                        <option value="all">все категории</option>

                                        @foreach (var cat in ViewBag.Categories)
                                        {
                                            <option value="@cat.IdCategory" selected="@(ViewBag.CurrentCategory == cat.IdCategory.ToString())">@cat.NameCategory</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div>
                                <label for="category-filter" class="filter-label">сортировка</label>
                                <div class="custom-select-wrapper">
                                    <select id="category-filter" name="sortBy" class="organic-select" onchange="this.form.submit()">
                                        <option value="asc" selected="@(ViewBag.SortedBy == "asc")"> по возрастанию</option>
                                        <option value="desc" selected="@(ViewBag.SortedBy == "desc")">по убыванию</option>
                                    </select>
                                </div>
                            </div>

                        </div>
                    </form>
                </div>
            </div>

            <div class="recipes-table-wrapper">
                <table>
                    <thead>
                        <tr>
                            <th>название</th>
                            <th>описание</th>
                            <th>категория</th>
                            <th>время (мин)</th>
                        </tr>
                    </thead>
                    <tbody>

                        @if(Model != null && Model.Any())
                        {
                            @foreach (var r in Model)
                            {
                                <tr>
                                    <td><strong>@r.RecipeName</strong></td>
                                    <td>@r.RecipeDescr</td>
                                    <td>@r.Category.NameCategory</td>
                                    <td>@r.CookingTime</td>
                                    <td class="action-cell">
                                        <a class="action-link" asp-controller="Recipe" asp-action="RecipeDetails" asp-route-id="@r.IdRecipe" asp-route-category="@r.CategoryID">открыть</a>
                                    </td>
                                </tr>
                            }
                        }
                        else{
                            <tr>
                                <td colspan="5" style="text-align: center; padding: 2rem;">
                                    Рецептов пока нет. Добавьте первый рецепт!
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="table-footer">
                <span>всего рецептов: @(Model?.Count() ?? 0)</span>
            </div>
        </div>

    </div>
</body>
