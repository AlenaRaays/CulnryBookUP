<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CulnryBookUP</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CulnryBookUP.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/form.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <body>
                <!-- Навбар (вставьте ваш существующий навбар) -->

                <div class="main-container">
                    <div class="container">
                        <!-- Заголовок страницы -->
                        <div class="page-title">
                            <h1><i class="bi bi-book-half"></i> Кулинарная книга</h1>
                            <p>Вкусные рецепты на каждый день</p>
                        </div>

                        <!-- Панель поиска -->
                        <div class="row justify-content-center mb-4">
                            <div class="col-md-8">
                                <form method="get" class="search-panel">
                                    <div class="input-group">
                                        <input type="text" class="form-control" name="searchString"
                                               placeholder="Поиск рецептов..." value="@ViewBag.SearchString">
                                        <button type="submit" class="btn-search">
                                            <i class="bi bi-search"></i> Найти
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <!-- Фильтр по категориям -->
                        <div class="category-filter text-center">
                            <a href="/" class="btn btn-outline-light @(ViewBag.SelectedCategory == null ? "active" : "")">
                                Все
                            </a>
                            @foreach (var category in ViewBag.Categories)
                            {
                                <a href="/?categoryId=@category.IdCategory"
                                   class="btn btn-outline-light @(ViewBag.SelectedCategory == category.IdCategory ? "active" : "")">
                                    @category.CategoryName
                                </a>
                            }
                        </div>

                        <!-- Сетка рецептов -->
                        @if (!Model.Any())
                        {
                            <div class="no-recipes">
                                <i class="bi bi-emoji-frown"></i>
                                <h3>Рецептов не найдено</h3>
                                <p>Попробуйте изменить параметры поиска или добавьте новый рецепт</p>
                                <a href="/Recipe/Create" class="btn-add-recipe">
                                    <i class="bi bi-plus-circle"></i> Добавить рецепт
                                </a>
                            </div>
                        }
                        else
                        {
                            <div class="row g-4">
                                @foreach (var recipe in Model)
                                {
                                    <div class="col-lg-4 col-md-6">
                                        <div class="recipe-card">
                                            <div class="recipe-header">
                                                <h3>@recipe.RecipeName</h3>
                                                <span class="category-badge">
                                                    <i class="bi bi-tag"></i> @recipe.Category?.CategoryName
                                                </span>
                                            </div>
                                            <div class="recipe-body">
                                                <p class="recipe-description">@recipe.RecipeDescr</p>

                                                <div class="d-flex justify-content-between align-items-center">
                                                    <span class="cooking-time">
                                                        <i class="bi bi-clock"></i> @recipe.CookingTime мин
                                                    </span>

                                                    <a href="/Home/Details/@recipe.IdRecipe" class="btn-view">
                                                        <i class="bi bi-eye"></i> Смотреть
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            </body>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - CulnryBookUP - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
